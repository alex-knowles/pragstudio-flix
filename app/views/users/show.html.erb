<article id="user">
  <header id="content-header">
    <h1> <%= @user.name %> </h1>
    <h2> <%= mail_to(@user.email) %> </h2>
  </header>

  <footer>
    <nav>
      <% if current_user?(@user) %>
        <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
        <%= link_to 'Delete Account', @user,
                    class: 'button',
                    method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </nav>
  </footer>
</article>