<header id="content-header">
  <h1>Writing a review for <%= link_to(@movie.title, @movie) %></h1>
</header>

<%= form_for([@movie, @review]) do |f| %>
  <p>
    <%= f.label :name %></br>
    <%= f.text_field :name, size: 40, autofocus: true %>
  </p>
  <p>
    <%= f.label :stars %></br>
    <%= f.select :stars, Review::STARS, prompt: "Pick one" %>
  </p>
  <p>
    <%= f.label :comment %></br>
    <%= f.text_area :comment, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.submit "Post Review"%>
  </p>
<% end %>