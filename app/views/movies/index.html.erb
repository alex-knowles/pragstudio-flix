<h1>Movies</h1>

<ul>
  <% @movies.each do |movie| %>
    <li>
      <strong><%= "#{movie.title}"%></strong>
      <%= " (#{movie.rating}): #{number_to_currency(movie.total_gross)}"%>
      <p>
        <%= movie.description %>
      </p>
      <p>
        <%= movie.released_on %>
      </p>
    </li>
  <% end %>
</ul>
