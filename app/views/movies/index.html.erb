<h1>
  <%= "#{@movies.count} #{"Movie".pluralize(@movies.count, :en)}" %>
</h1>

<%= link_to("Add New Movie", new_movie_path) %>

<ul>
  <% @movies.each do |movie| %>
    <article>
      <header>
        <h2><%= link_to(movie.title, movie) %></h2>
      </header>
      <p>
        <%= image_tag(movie.image_file_name) %>
      </p>
      <p>
        <%= truncate(movie.description, length: 40, separator: ' ') %>
      </p>
      <table>
        <tr>
          <th>Released:</th>
          <% release_date = movie.released_on%>
          <td><%=  "#{release_date} (#{time_ago_in_words(release_date)} ago)" %></td>
        </tr>
        <tr>
          <th>Rating:</th>
          <td><%= movie.rating %></td>
        </tr>
        <tr>
          <th>Total Gross:</th>
          <td><%= format_total_gross(movie) %></td>
        </tr>
        <tr>
          <th>Cast:</th>
          <td><%= movie.cast %></td>
        </tr>
        <tr>
          <th>Duration:</th>
          <td><%= movie.duration %></td>
        </tr>
      </table>
    </article>
  <% end %>
</ul>
